{
    "name": "micro-app",
    "version": "1.0.0",
    "description": "To be loaded by the host app",
    "main": "index.js",
    "scripts": {
        "dev": "webpack-dev-server --open --config ./webpack.dev.config.js",
        "build:microapp": "webpack --config ./webpack.microapp.config.js",
        "build:standalone": "webpack --config ./webpack.standalone.config.js",
        "build": "npm run build:microapp && npm run build:standalone",
        "lint": "eslint './src/**/*.{ts,tsx}' --fix",
        "prettier": "prettier --check 'src/**/*.ts' 'src/**/*.tsx' --write"
    },
    "author": "Mozart Diniz <mozart.diniz@gmail.com>",
    "license": "Apache-2.0",
    "dependencies": {
        "@types/react": "^16.9.11",
        "@types/react-dom": "^16.9.4",
        "@types/single-spa-react": "^2.8.3",
        "@typescript-eslint/eslint-plugin": "^2.8.0",
        "@typescript-eslint/parser": "^2.8.0",
        "eslint": "^6.6.0",
        "eslint-config-prettier": "^6.7.0",
        "eslint-config-react": "^1.1.7",
        "eslint-plugin-prettier": "^3.1.1",
        "eslint-plugin-react": "^7.16.0",
        "html-webpack-plugin": "^3.2.0",
        "lerna": "^3.18.4",
        "prettier": "^1.19.1",
        "react": "^16.12.0",
        "react-dom": "^16.12.0",
        "single-spa-react": "^2.10.4",
        "source-map-loader": "^0.2.4",
        "terser-webpack-plugin": "^2.2.1",
        "ts-loader": "^6.2.1",
        "typescript": "^3.7.2",
        "webpack": "^4.41.2",
        "webpack-cli": "^3.3.10",
        "webpack-dev-server": "^3.9.0"
    }
}
